# Environment mode (dev, prod)
NODE_ENV=dev

# Logging level (error, warn, info, debug, trace)
LOG_LEVEL=debug

# Port where the server will run
SERVER_PORT=3000

# Base URL of your app (used for generating links, CORS, etc.)
APP_BASE_URL=http://localhost:3000

# Prefix used in all API routes (e.g., /api/v1)
APP_ROUTE_PREFIX=/api/v1

# Path to the directory that contains controllers
APP_DIR_CONTROLLERS=src/api/controllers

# CORS settings
CORS_ORIGINS=http://localhost:3000
CORS_METHODS=GET,POST,PUT,PATCH,DELETE
CORS_HEADERS=Content-Type,Authorization
CORS_CREDENTIALS=true

# Rate limiting config
# Window duration (e.g., 900000 = 15 minutes)
RATE_LIMIT_WINDOW=900000
# Max requests per window per IP
RATE_LIMIT_REQUESTS=100

# MongoDB connection
MONGO_USERNAME=devuser
MONGO_PASSWORD=devpass
# Can be in the form: host:port
MONGO_HOST=localhost:27017
# Optional URL params (e.g., ?authSource=admin)
MONGO_PARAMS=?retryWrites=true&w=majority

# Cloudflare R2 (S3-compatible) storage config
R2_ACCESS_KEY_ID=your-access-key
R2_SECRET_ACCESS_KEY=your-secret-key
R2_ACCOUNT_ID=your-account-id
R2_BUCKET_NAME=example-media
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
# Optional: CDN URL or public proxy endpoint
R2_PUB_ENDPOINT=https://cdn.example.dev
R2_REGION=auto

# Gmail SMTP settings for sending emails
SMTP_SERVICE=gmail
SMTP_NAME="My App"
SMTP_USER=your.email@gmail.com
SMTP_PASS=your_app_password

# HTTP compression settings
# From 0 (no compression) to 9 (max). 6 is a good value.
COMPRESSION_LEVEL=6
# Minimum byte size for compressing a response (e.g., 1024 = 1KB)
COMPRESSION_THRESHOLD=1024

# JWT configuration
JWT_ACCESS_TOKEN_SECRET=access-token-secret
JWT_ACCESS_TOKEN_EXPIRES_IN=15m # Duration format: 7d = 7 days, 30d = 30 days, ...
JWT_REFRESH_TOKEN_SECRET=refresh-token-secret
JWT_REFRESH_TOKEN_EXPIRES_IN=30d
JWT_REFRESH_TOKEN_COOKIE_NAME=refresh_token

# Password reset settings
# Number of bytes for random token (e.g., 32 => 64 characters in hex)
PASS_RESET_BYTES=32
# Expiration in milliseconds (e.g., 1800 = 30 min)
PASS_RESET_EXPIRES_IN=900000

# Validation code (e.g., for email verification)
# Size of numeric code (e.g., 6 => 6 digits)
VALIDATION_CODE_SIZE=6
# Expiration in milliseconds (e.g., 900000 = 15 min)
VALIDATION_CODE_EXPIRES_IN=900000