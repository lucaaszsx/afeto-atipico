# Environment: 'dev' for development, 'prod' for production
ENVIRONMENT=dev

# Server port where the app will listen
PORT=3000

# Allowed origin for CORS requests
CORS_ORIGIN=http://localhost:3000

# Rate limiting window duration in ms
RATE_LIMIT_WINDOW=900000 # 15 minutes

# Maximum number of requests allowed per window per IP
RATE_LIMIT_REQUESTS=100

# MongoDB connection string
MONGO_URL=mongodb://username:password@host:port/database

# Secret key used to sign JWT access tokens
JWT_SECRET=your_jwt_secret_here

# Secret key used to sign JWT refresh tokens
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here

# JWT access token expiration time (e.g., 15m, 1h)
JWT_EXPIRES_IN=15m